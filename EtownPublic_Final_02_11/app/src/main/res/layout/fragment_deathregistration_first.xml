<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/li_parent_lay"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:elevation="5dp"
            app:cardCornerRadius="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="5dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="8dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_medium"
                    android:textColor="@color/colorPrimaryDark"
                    android:text="Parents Information"
                    android:singleLine="true"
                    android:textAlignment="center"
                    android:textSize="18sp"
                    />

                <com.rengwuxian.materialedittext.MaterialEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:enabled="true"
                    app:met_floatingLabel="highlight"
                    app:met_clearButton="false"
                    android:drawableRight="@drawable/ic_arrow_drop_down_black_24dp"
                    app:met_primaryColor="@color/colorPrimaryDark"
                    android:fontFamily="@font/roboto_light"                    android:hint="District"
                    android:focusable="false"
                    android:id="@+id/et_district"
                    android:inputType="none"
                    android:textAlignment="viewStart"
                    android:textSize="@dimen/fragment_body_text_size"
                    android:gravity="start" />

                <com.rengwuxian.materialedittext.MaterialEditText
                    android:layout_width="match_parent"
                    android:singleLine="true"
                    android:layout_height="wrap_content"
                    android:enabled="true"
                    app:met_floatingLabel="highlight"
                    app:met_clearButton="false"
                    android:drawableRight="@drawable/ic_arrow_drop_down_black_24dp"
                    app:met_primaryColor="@color/colorPrimaryDark"
                    android:id="@+id/et_panchayat"
                    android:focusable="false"
                    android:fontFamily="@font/roboto_light"                    android:hint="Panchayat"
                    android:inputType="none"
                    android:textAlignment="viewStart"
                    android:textSize="@dimen/fragment_body_text_size"
                    android:gravity="start" />



                    <com.rengwuxian.materialedittext.MaterialEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:fontFamily="@font/roboto_light"                        android:hint="Mobile No."
                        android:id="@+id/et_mobileno"
                        android:inputType="number"
                        app:met_floatingLabel="highlight"
                        app:met_clearButton="true"
                        app:met_primaryColor="@color/colorPrimaryDark"
                        android:maxLength="10"
                        android:textAlignment="viewStart"
                        android:textSize="@dimen/fragment_body_text_size" />



                    <com.rengwuxian.materialedittext.MaterialEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_light"                        android:hint="Email Id"
                        android:singleLine="true"
                        android:id="@+id/et_emailid"
                        android:inputType="text"
                        app:met_floatingLabel="highlight"
                        app:met_clearButton="true"
                        app:met_primaryColor="@color/colorPrimaryDark"
                        android:textAlignment="viewStart"
                        android:textSize="@dimen/fragment_body_text_size"/>



                    <com.rengwuxian.materialedittext.MaterialEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_light"                        android:hint="Husband/Wife Name"
                        android:id="@+id/et_husbandwifename"
                        android:textAlignment="viewStart"
                        android:textSize="@dimen/fragment_body_text_size"
                        app:met_floatingLabel="highlight"
                        app:met_clearButton="true"
                        app:met_primaryColor="@color/colorPrimaryDark"
                        android:gravity="start" />



                    <com.rengwuxian.materialedittext.MaterialEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_light"                        android:hint="Father Name"
                        android:singleLine="true"
                        android:id="@+id/et_fathername"
                        android:textAlignment="viewStart"
                        android:textSize="@dimen/fragment_body_text_size"
                        app:met_floatingLabel="highlight"
                        app:met_clearButton="true"
                        app:met_primaryColor="@color/colorPrimaryDark"
                        android:gravity="start" />



                    <com.rengwuxian.materialedittext.MaterialEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_light"                        android:hint="Mother Name"
                        android:id="@+id/et_mothername"
                        android:inputType="textEmailAddress"
                        android:textAlignment="viewStart"
                        app:met_floatingLabel="highlight"
                        app:met_clearButton="true"
                        app:met_primaryColor="@color/colorPrimaryDark"
                        android:textSize="@dimen/fragment_body_text_size"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:fontFamily="@font/roboto_light"                        android:text="Permanent Address"
                        android:textAlignment="viewStart"
                        android:textSize="@dimen/fragment_body_text_size" />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:background="@drawable/edittext_background"
                        android:inputType="textMultiLine"
                        android:minHeight="60dp"
                        android:padding="5dp"
                        android:fontFamily="@font/roboto_light"
                        android:id="@+id/et_permanent_address"
                        android:textSize="16sp" />



                        <com.rengwuxian.materialedittext.MaterialEditText
                            android:id="@+id/et_pincode"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_light"                            android:hint="Pin Code"
                            android:singleLine="true"
                            android:inputType="number"
                            android:maxLength="6"
                            app:met_floatingLabel="highlight"
                            app:met_clearButton="true"
                            app:met_primaryColor="@color/colorPrimaryDark"
                            android:textAlignment="viewStart"
                            android:textSize="@dimen/fragment_body_text_size"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <CheckBox
                        android:id="@+id/check_above_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Same As Above Address"
                        android:checked="false" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:fontFamily="@font/roboto_light"                        android:text="Address at the time of death"
                        android:textAlignment="viewStart"
                        android:textSize="@dimen/fragment_body_text_size"/>

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                       android:background="@drawable/edittext_background"
                        android:inputType="textMultiLine"
                        android:minHeight="60dp"
                        android:padding="5dp"
                        android:fontFamily="@font/roboto_light"
                        android:id="@+id/et_per_permanent_address"
                        android:textSize="16sp" />


                        <com.rengwuxian.materialedittext.MaterialEditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_light"                            android:hint="Pin Code"
                            android:singleLine="true"
                            android:inputType="number"
                            app:met_floatingLabel="highlight"
                            app:met_clearButton="true"
                            app:met_primaryColor="@color/colorPrimaryDark"
                            android:maxLength="6"
                            android:textAlignment="viewStart"
                            android:textSize="@dimen/fragment_body_text_size"
                            android:id="@+id/et_per_pincode"/>

                </LinearLayout>

            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:elevation="5dp"
            app:cardCornerRadius="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="5dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="8dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_medium"
                    android:text="Death Person Information"
                    android:textColor="@color/colorPrimaryDark"
                    android:textAlignment="center"
                    android:textSize="18sp"
                     />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                        <com.rengwuxian.materialedittext.MaterialEditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_light"                            android:hint="Date of Death"
                            android:singleLine="true"
                            android:id="@+id/et_deathdate"
                            app:met_floatingLabel="highlight"
                            app:met_clearButton="false"
                            app:met_primaryColor="@color/colorPrimaryDark"
                            android:drawableRight="@drawable/ic_insert_invitation_black_24dp"
                            android:inputType="text"
                            android:focusable="false"
                            android:textAlignment="viewStart"
                            android:textSize="@dimen/fragment_body_text_size"/>



                        <com.rengwuxian.materialedittext.MaterialEditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_light"                            android:hint="Name"
                            android:id="@+id/et_name"
                            app:met_floatingLabel="highlight"
                            app:met_clearButton="true"
                            app:met_primaryColor="@color/colorPrimaryDark"
                            android:singleLine="true"
                            android:inputType="text"
                            android:textAlignment="viewStart"
                            android:textSize="@dimen/fragment_body_text_size"/>


                        <com.rengwuxian.materialedittext.MaterialEditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_light"                            android:hint="Gender"
                            android:focusable="false"
                            android:singleLine="true"
                            app:met_floatingLabel="highlight"
                            app:met_clearButton="false"
                            app:met_primaryColor="@color/colorPrimaryDark"
                            android:drawableRight="@drawable/ic_arrow_drop_down_black_24dp"
                            android:id="@+id/et_gender"
                            android:inputType="text"
                            android:textAlignment="viewStart"
                            android:textSize="@dimen/fragment_body_text_size"/>



                        <com.rengwuxian.materialedittext.MaterialEditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_light"                            android:hint="Age"
                            android:singleLine="true"
                            app:met_floatingLabel="highlight"
                            app:met_clearButton="true"
                            app:met_primaryColor="@color/colorPrimaryDark"
                            android:id="@+id/et_age"
                            android:inputType="number"
                            android:textAlignment="viewStart"
                            android:textSize="@dimen/fragment_body_text_size"
                            android:gravity="start" />



                        <com.rengwuxian.materialedittext.MaterialEditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_light"                            android:hint="Years"
                            android:focusable="false"
                            app:met_floatingLabel="highlight"
                            app:met_clearButton="false"
                            app:met_primaryColor="@color/colorPrimaryDark"
                            android:singleLine="true"
                            android:drawableRight="@drawable/ic_arrow_drop_down_black_24dp"
                            android:id="@+id/et_age_years"
                            android:inputType="text"
                            android:textAlignment="viewStart"
                            android:textSize="@dimen/fragment_body_text_size"/>


                </LinearLayout>

            </LinearLayout>
        </android.support.v7.widget.CardView>

        <Button
            android:id="@+id/btn_next"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:background="@drawable/bg_button"
            android:fontFamily="@font/roboto_light"
            android:text="Next"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/fragment_body_text_size"
            android:textStyle="bold"/>
    </LinearLayout>
</ScrollView>