<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:orientation="vertical"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/li_parent_lay"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:elevation="5dp"
            app:cardCornerRadius="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="5dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="8dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Parents Information"
                    android:textColor="@color/colorPrimaryDark"
                    android:textAlignment="center"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <com.rengwuxian.materialedittext.MaterialEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:enabled="true"
                    android:hint="District"
                    android:focusable="false"
                    app:met_clearButton="false"
                    app:met_floatingLabel="highlight"
                    app:met_primaryColor="@color/colorPrimaryDark"
                    android:drawableRight="@drawable/ic_arrow_drop_down_black_24dp"
                    android:id="@+id/et_district"
                    android:singleLine="true"
                    android:inputType="none"
                    android:textAlignment="viewStart"
                    android:textSize="@dimen/fragment_body_text_size" />

                <com.rengwuxian.materialedittext.MaterialEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:enabled="true"
                    android:id="@+id/et_panchayat"
                    android:focusable="false"
                    app:met_floatingLabel="highlight"
                    app:met_primaryColor="@color/colorPrimaryDark"
                    android:drawableRight="@drawable/ic_arrow_drop_down_black_24dp"
                    android:hint="Panchayat"
                    android:inputType="none"
                    android:singleLine="true"
                    android:textAlignment="viewStart"
                    android:textSize="@dimen/fragment_body_text_size"/>



               <com.rengwuxian.materialedittext.MaterialEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Mobile No."
                        app:met_clearButton="true"
                        android:id="@+id/et_mobileno"
                        android:inputType="number"
                        app:met_floatingLabel="highlight"
                        app:met_primaryColor="@color/colorPrimaryDark"
                        android:maxLength="10"
                        android:singleLine="true"
                        android:textAlignment="viewStart"
                        android:textSize="@dimen/fragment_body_text_size"/>

                <com.rengwuxian.materialedittext.MaterialEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:met_floatingLabel="highlight"
                    app:met_primaryColor="@color/colorPrimaryDark"
                    android:hint="Email Id"
                    app:met_clearButton="true"
                    android:id="@+id/et_emailid"
                    android:inputType="text"
                    android:singleLine="true"
                    android:textAlignment="viewStart"
                    android:textSize="@dimen/fragment_body_text_size"/>







                    <com.rengwuxian.materialedittext.MaterialEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:met_floatingLabel="highlight"
                        app:met_primaryColor="@color/colorPrimaryDark"
                        android:hint="Father Name"
                        app:met_clearButton="true"
                        android:singleLine="true"
                        android:id="@+id/et_fathername"
                        android:textAlignment="viewStart"
                        android:textSize="@dimen/fragment_body_text_size"/>




                    <com.rengwuxian.materialedittext.MaterialEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:met_floatingLabel="highlight"
                        app:met_primaryColor="@color/colorPrimaryDark"
                        android:hint="Mother Name"
                        android:singleLine="true"
                        app:met_clearButton="true"
                        android:id="@+id/et_mothername"
                        android:inputType="textEmailAddress"
                        android:textAlignment="viewStart"
                        android:textSize="@dimen/fragment_body_text_size"/>



                    <com.rengwuxian.materialedittext.MaterialEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:met_floatingLabel="highlight"
                        app:met_primaryColor="@color/colorPrimaryDark"
                        android:hint="Father Aadhaar No."
                        android:id="@+id/et_father_aadhar_no"
                        android:inputType="number"
                        app:met_clearButton="true"
                        android:singleLine="true"
                        android:textAlignment="viewStart"
                        android:textSize="@dimen/fragment_body_text_size"
                        android:maxLength="12"/>




                    <com.rengwuxian.materialedittext.MaterialEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:met_floatingLabel="highlight"
                        app:met_primaryColor="@color/colorPrimaryDark"
                        android:hint="Mother Aadhaar No."
                        android:inputType="number"
                        android:clickable="true"
                        android:singleLine="true"
                        android:id="@+id/et_mother_aadhar_no"
                        android:textAlignment="viewStart"
                        android:textSize="@dimen/fragment_body_text_size"
                        android:maxLength="12"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                       
                        android:text="Permanent Address"
                        android:textAlignment="viewStart"
                        android:textSize="@dimen/fragment_body_text_size" />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:background="@drawable/edittext_background"
                        android:inputType="textMultiLine"
                        android:minHeight="60dp"
                        android:padding="5dp"
                       
                        android:id="@+id/et_permanent_address"
                        android:textSize="16sp" />



                        <com.rengwuxian.materialedittext.MaterialEditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:met_floatingLabel="highlight"
                            app:met_primaryColor="@color/colorPrimaryDark"
                            android:hint="Pin Code"
                            app:met_clearButton="true"
                            android:inputType="number"
                            android:singleLine="true"
                            android:maxLength="6"
                            android:textAlignment="viewStart"
                            android:textSize="@dimen/fragment_body_text_size"
                            android:id="@+id/et_pincode"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <CheckBox
                        android:id="@+id/check_above_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Same As Above Address"
                       
                        android:checked="false" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                       
                        android:text="Address of parent at the time of birth"
                        android:textAlignment="viewStart"
                        android:textSize="@dimen/fragment_body_text_size" />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:background="@drawable/edittext_background"
                        android:inputType="textMultiLine"
                        android:minHeight="60dp"
                        android:padding="5dp"
                        android:id="@+id/et_per_permanent_address"
                        android:textSize="16sp" />



                        <com.rengwuxian.materialedittext.MaterialEditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:met_floatingLabel="highlight"
                            app:met_primaryColor="@color/colorPrimaryDark"
                            android:hint="Pin Code"
                            app:met_clearButton="true"
                            android:singleLine="true"
                            android:inputType="number"
                            android:textAlignment="viewStart"
                            android:textSize="@dimen/fragment_body_text_size"
                            android:id="@+id/et_per_pincode"/>

                </LinearLayout>

            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:elevation="5dp"
            app:cardCornerRadius="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="5dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="8dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorPrimaryDark"
                    android:text="Child Information"
                    android:textAlignment="center"
                    android:textSize="18sp"
                    android:textStyle="bold" />



                    <com.rengwuxian.materialedittext.MaterialEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:met_floatingLabel="highlight"
                        app:met_primaryColor="@color/colorPrimaryDark"
                        android:singleLine="true"
                        app:met_clearButton="false"
                        android:drawableRight="@drawable/ic_insert_invitation_black_24dp"
                        android:hint="Date of Birth"
                        android:id="@+id/et_dob"
                        android:inputType="text"
                        android:focusable="false"
                        android:textAlignment="viewStart"
                        android:textSize="@dimen/fragment_body_text_size"/>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="5dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:text="Gender"
                       
                        android:textAlignment="viewStart"
                        android:gravity="start|center"
                        android:layout_gravity="center"/>

                    <RadioGroup
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_weight="1"
                        android:id="@+id/rg_gender"
                        android:layout_gravity="center"
                        android:gravity="center">

                        <RadioButton
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Male"
                            android:id="@+id/rb_male"
                           
                            android:enabled="true"
                            android:buttonTint="@color/buttonBackgroundColor"/>

                        <RadioButton
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Female"
                            android:id="@+id/rb_female"
                            android:enabled="true"
                           
                            android:buttonTint="@color/buttonBackgroundColor"/>
                    </RadioGroup>
                </LinearLayout>



                    <com.rengwuxian.materialedittext.MaterialEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:met_floatingLabel="highlight"
                        app:met_clearButton="true"
                        app:met_primaryColor="@color/colorPrimaryDark"
                        android:singleLine="true"
                        android:hint="Child Name"
                        android:inputType="text"
                        android:id="@+id/et_childname"
                        android:textAlignment="viewStart"
                        android:textSize="@dimen/fragment_body_text_size"/>


            </LinearLayout>
        </android.support.v7.widget.CardView>

        <Button
            android:id="@+id/btn_next"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:background="@drawable/bg_button"
            android:text="Next"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/fragment_body_text_size"
            android:textStyle="bold" />
    </LinearLayout>
</ScrollView>