<?xml version="1.0" encoding="utf-8"?>

<FrameLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="@dimen/dimen_15dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="@dimen/dimen_6dp"
            android:layout_marginTop="60dp"

            android:layout_marginLeft="@dimen/margin_10"
            android:layout_marginRight="@dimen/margin_10"
            android:layout_marginBottom="@dimen/margin_10"
            android:layout_gravity="center_horizontal"
            app:cardCornerRadius="@dimen/dimen_4dp">

    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:padding="@dimen/margin_5"
        android:layout_marginLeft="@dimen/margin_5"
        android:layout_marginRight="@dimen/margin_5">
        <TableRow android:weightSum="3">

            <TextView android:width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.1"
                android:text="Name"
                android:fontFamily="@font/roboto_medium"
                android:textColor="@color/black"/>
            <TextView
                android:id="@+id/et_title"
                android:width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.9"
                android:text="Mr.Name"
                android:textSize="@dimen/dimen_12sp"
                android:textColor="@color/black"/>

        </TableRow>

       <TableRow android:weightSum="3"
           android:layout_marginTop="@dimen/dimen_15dp">
           <TextView android:width="0dp"
               android:layout_height="wrap_content"
               android:layout_weight="1.1"
               android:text="Contact No"
               android:fontFamily="@font/roboto_medium"

               android:textColor="@color/black"/>
           <TextView
               android:id="@+id/et_contactno"
               android:width="0dp"
               android:layout_height="wrap_content"
               android:layout_weight="1.9"
               android:textSize="@dimen/dimen_12sp"
               android:text="457568688"
               android:textColor="@color/black"/>
       </TableRow>

        <TableRow android:weightSum="3"
            android:layout_marginTop="@dimen/dimen_15dp">
            <TextView android:width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.1"
                android:text="Email Id"
                android:fontFamily="@font/roboto_medium"
                android:textColor="@color/black"/>
            <TextView
                android:id="@+id/et_emailid"
                android:width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.9"
                android:textSize="@dimen/dimen_12sp"
                android:text="example@gmail.com"
                android:textColor="@color/black"/>
        </TableRow>

        <TableRow android:weightSum="3"
            android:layout_marginTop="@dimen/dimen_15dp">
            <TextView android:width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.1"
                android:text="Address"
                android:fontFamily="@font/roboto_medium"

                android:textColor="@color/black"/>
            <TextView
                android:id="@+id/et_address_one"
                android:width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.9"
                android:textSize="@dimen/dimen_12sp"
                android:text="@string/address"
                android:textColor="@color/black"/>
        </TableRow>

        <TableRow android:weightSum="4"
            android:layout_marginTop="@dimen/dimen_15dp">
            <TextView android:width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".8"
                android:text="State"
                android:fontFamily="@font/roboto_medium"

                android:textColor="@color/black"/>
            <TextView
                android:id="@+id/et_statename"
                android:width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.2"
                android:text="Tamil Nadu"
                android:textSize="@dimen/dimen_12sp"
                android:textColor="@color/black"/>
            <TextView android:width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="City"
                android:fontFamily="@font/roboto_medium"

                android:textColor="@color/black"/>
            <TextView
                android:id="@+id/et_cityname"
                android:width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="@dimen/dimen_12sp"
                android:text="Hosur"
                android:textColor="@color/black"/>
        </TableRow>

        <TableRow android:weightSum="4"
            android:layout_marginTop="@dimen/dimen_15dp">
            <TextView android:width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".8"
                android:text="Country"
                android:fontFamily="@font/roboto_medium"

                android:textColor="@color/black"/>
            <TextView
                android:id="@+id/et_country"
                android:width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.2"
                android:text="India"
                android:textSize="@dimen/dimen_12sp"
                android:textColor="@color/black"/>
            <TextView android:width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Pincode"
                android:fontFamily="@font/roboto_medium"

                android:textColor="@color/black"/>
            <TextView
                android:id="@+id/et_pincode"
                android:width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="@dimen/dimen_12sp"
                android:text="524321"
                android:textColor="@color/black"/>
        </TableRow>

    </TableLayout>
     </android.support.v7.widget.CardView>
    </LinearLayout>

        <ImageView
            android:layout_width="95dp"
            android:layout_height="95dp"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/profile"
            android:layout_gravity="center|top"/>
    </FrameLayout>
